@model delicious.Models.Dish

<h2>Edit Dish!</h2>
<a href="/">Home</a>

<form action="/process/@Model.DishId" method="post">

    <p>Chef's Name</p>
    <input type="text" name="Name" value="@Model.Name">
    
    <p></p>

    <p>Name of Dish</p>
    <input type="text" name="Chef" value="@Model.Chef">
    <p></p>

    <p># of Calories</p>
    <input type="int" name="Tastiness" value="@Model.Calories">
    <p></p>

    <p>Tastiness</p>
    <select name="Calories" value="@Model.Tastiness">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
    </select>
    <p></p>

    <p>Description</p>
    <textarea name="Description" rows="10" cols="30">@Model.Description</textarea>
    </textarea>
    <p></p>

    <button type="submit">Add Dish</button>

</form>